<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload= "true"
	  internalLogLevel = "Info"
	  internalLogfile ="C:\temp\internal-nlog.txt">

	<extensions>
		<add assembly ="NLog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<target xsi:type="File" name="allfile" fileName ="C:\SkinCareAPILogs\nlog-all-${shortdate}.log"
				layout="${longdate}|${event-properties:item=EventId}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

	<target xsi:type="File" name="exceptions" fileName ="C:\SkinCareAPILogs\nlog-all-exceptions-${shortdate}.log"
		    layout="${longdate}|${event-properties:item=EventId}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />
	</targets>

	<rules>
		<!--<logger name="*" levels="Info,Error,Debug,Warn,Trace,Fail" writeTo="console" />-->
		<logger name="*" minlevel="Warn" writeTo="allfile" />
		<logger name="*" minlevel="Error" writeTo="exceptions" />
		<!-- <logger name="*" levels="Error" writeTo="email" /> -->
	</rules>
</nlog>

